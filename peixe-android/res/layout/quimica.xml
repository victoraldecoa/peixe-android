<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/tabQuimicaLayout"
  android:background="@color/darkGray">
  >
  	
<RelativeLayout
  		android:id="@+id/barraQuimica"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="5dp"
		android:paddingRight="10dp">
		
		 <TextView 
			 android:layout_width="wrap_content"
			 android:id="@+id/textoHorarioQuimica"
			 android:textAppearance="@android:style/TextAppearance.Large"
			 android:paddingLeft="10dp"
			 android:text="@string/Almoco"
			 android:layout_height="wrap_content"
			 android:layout_centerVertical="true"
			 android:textColor="@color/white">
		 </TextView>
  	
		<Button 
			android:text="117"
			android:textColor="@color/lightRed"
			android:textStyle="bold"
			android:id="@+id/botaoDownQuimica" 
			android:layout_width="80dp"
			android:layout_height="40dp"
			android:layout_marginLeft="10dp"
			android:textSize="12dp"
			android:layout_alignParentRight="true"
			android:drawableLeft="@drawable/dislike">
		</Button>
		
		<Button android:text="12" 
			android:id="@+id/botaoUpQuimica" 
			android:textStyle="bold"
			android:layout_width="80dp"
			android:layout_height="40dp"
			android:textColor="@color/lightBlue" 
			android:textSize="12dp"
			android:drawableLeft="@drawable/like"
			android:layout_toLeftOf="@id/botaoDownQuimica"
			>
		</Button>
</RelativeLayout>

	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
		android:id="@+id/linearLayout1">
	  		
	  		<TextView
	  			android:textColor="@color/white" 
	  			android:text="11:00-" 
	  			android:layout_width="wrap_content" 
	  			android:layout_height="wrap_content" 
	  			android:id="@+id/horarioQuimicaAbertura">
	  		</TextView>
	  		
	  		<TextView
	  			android:textColor="@color/white" 
	  			android:text="14:00" 
	  			android:layout_width="wrap_content" 
	  			android:layout_height="wrap_content" 
	  			android:id="@+id/horarioQuimicaFechamento">
	  		</TextView>
	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
	        
	  	<TextView 
	  		android:layout_width="wrap_content" 
	  		android:id="@+id/pratoQuimica1" 
	  		android:textAppearance="?android:attr/textAppearanceLarge" 
	  		android:text="@string/StringQuimicaPrato1" 
	  		android:textColor="@color/white"
	  		android:layout_height="wrap_content">
	  	</TextView>
	  	
	  	<TextView android:textColor="@color/white" android:layout_width="wrap_content" android:id="@+id/pratoQuimica2" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/StringQuimicaPrato2" android:layout_height="wrap_content"></TextView>
	  	<TextView android:textColor="@color/white" android:layout_width="wrap_content" android:id="@+id/pratoQuimica3" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/StringQuimicaPrato3" android:layout_height="wrap_content"></TextView>
	  	<TextView android:textColor="@color/white" android:layout_width="wrap_content" android:id="@+id/pratoQuimica4" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/StringQuimicaPrato4" android:layout_height="wrap_content"></TextView>
	  	<TextView android:textColor="@color/white" android:layout_width="wrap_content" android:id="@+id/pratoQuimica5" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/StringQuimicaPrato5" android:layout_height="wrap_content"></TextView>
	  	<!-- <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:id="@+id/pratoQuimica6" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/StringQuimicaPrato6" android:layout_height="wrap_content"></TextView> -->
	  	
	  	<TextView android:textColor="@color/white" android:paddingTop="2px" android:text="nÂº Kcal" android:id="@+id/caloriasQuimica" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	  	
	</LinearLayout>
</LinearLayout>